.container {
  padding: 20px;
}

.input-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.word-input {
  width: 80%;
  height: 44px;
  padding: 0 15px;
  border: 1px solid #ddd;
  border-radius: 22px;
  margin-bottom: 20px;
}

.submit-btn {
  width: 200px;
  height: 44px;
  background: #1890ff;
  color: #fff;
  border-radius: 22px;
}

.result-area {
  margin-top: 20px;
  padding: 15px;
  background: #f5f5f5;
  border-radius: 8px;
  width: 90%;
}

.result-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
}

.result-content {
  font-size: 14px;
  white-space: pre-wrap;
  word-break: break-all;
} 