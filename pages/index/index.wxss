.container {
  padding: 20px;
}

.input-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.word-input {
  width: 80%;
  height: 44px;
  padding: 0 15px;
  border: 1px solid #ddd;
  border-radius: 22px;
  margin-bottom: 20px;
}

.submit-btn {
  width: 200px;
  height: 44px;
  background: #1890ff;
  color: #fff;
  border-radius: 22px;
} 