<view class="container">
  <view class="input-area">
    <input 
      class="word-input"
      placeholder="请输入要学习的单词"
      value="{{word}}"
      bindinput="onInput"
    />
    <button 
      class="submit-btn"
      loading="{{loading}}"
      bindtap="onSubmit"
    >开始学习</button>
  </view>
</view> 